{
  "compilerOptions": {
    "module": "Node16",
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "Node16",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true
  },
  "include": ["src/**/*.mts", "src/**/*.mjs", "src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules"],
  "lib": ["es2015"]
}
